                    <img class="Img-display" src="/images/uploads/<%=user.Image%>" alt="">
                 <h3><%= whichone %></h3>
                </div>

                    <a href="/post">
                       
                     
<button type="button" class="button">
    <span class="button__text">Add Note</span>
